@page
@model IndexModel

@{
    ViewData["Title"] = "Publishers";
}

<h1>Publishers</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a asp-page="Create" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Create New</span>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Publisher[0].PublisherName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Publisher[0].City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Publisher[0].State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Publisher[0].Country)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Publisher[0].PublisherName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Publisher[0].City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Publisher[0].State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Publisher[0].Country)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Publisher)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PublisherName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Country)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.PubId" class="btn btn-secondary btn-circle">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.PubId" class="btn btn-info btn-circle">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.PubId" class="btn btn-danger btn-circle">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
