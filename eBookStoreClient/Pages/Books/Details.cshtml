@page
@model eBookStoreClient.Pages.Books.DetailsModel
@{
}

<div class="row">
    <div class="col-md-6">
        <a href="#" class="product-image"><img src="@Model.Book.Notes"></a>
    </div>

    <div class="col-md-6 pl-5">
        <div class="product-detail">
            <h1>@Html.DisplayFor(model => model.Book.Title)</h1>
            <p>@Html.DisplayFor(model => model.Book.Type)</p>
            <span class="price colored">$@Html.DisplayFor(model => model.Book.Price)</span>
            <p>
                @Html.DisplayFor(model => model.Book.Publisher.PublisherName)
            </p>
            <button type="submit" name="add-to-cart" value="27545" class="button">Add to cart</button>

        </div>
    </div>

</div>